extends ../layout
block content
  .container
    h1 Create Item
    +alerts()
    form.form-horizontal(action='/items/save', method='post', role='form')
      .form-group
        label.control-label.col-sm-2 Title
        .col-sm-10
          input.form-control(type='text', name='title', placeholder='Item Title')
      .form-group
        label.control-label.col-sm-2 Price
        .col-sm-10
          input.form-control(name='price', placeholder='Item Price, No Dollar Sign ($) needed')
      .form-group
        label.control-label.col-sm-2 URI
        .col-sm-10
          input.form-control(name='uri', placeholder='Item URI')
      .form-group
        label.control-label.col-sm-2 Description
        .col-sm-10
          textarea.form-control(rows='10', name='description')
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save