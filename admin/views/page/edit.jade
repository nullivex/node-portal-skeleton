extends ../layout
block content
  .container
    h1 Update Page
    +alerts()
    form.form-horizontal(action='/page/save', method='post', role='form')
      input(type='hidden', name='id', value=page.id)
      .form-group
        label.control-label.col-sm-2 Title
        .col-sm-10
          input.form-control(type='text', name='title', placeholder='Page Title', value=page.title)
      .form-group
        label.control-label.col-sm-2 URI
        .col-sm-10
          input.form-control(type='text', name='uri', placeholder='Page URI, leave blank for auto', value=page.uri)
      .form-group
        label.control-label.col-sm-2 Markdown
        .col-sm-10
          textarea.form-control(rows='10', name='content')= page.content
      .form-group
        label.control-label.col-sm-2 Active
        .col-sm-10
          input(type='checkbox', name='active', checked=page.active)
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save