extends ../layout
block content
  .container
    h1 View Seller Detail
    +alerts()
    form.form-horizontal
      input(type='hidden', name='id', value=seller.id)
      .form-group
        label.control-label.col-sm-2 Email
        .col-sm-10
          input.form-control(type='email', name='email', placeholder='Email Address', value=seller.email)
      .form-group
        label.control-label.col-sm-2 Buyer Name
        .col-sm-10
          input.form-control(type='text', name='name', placeholder='Buyer Name', value=seller.name)
      .form-group
        label.control-label.col-sm-2 Orders
        .col-sm-10
          textarea.form-control(rows='10', placeholder='Buyer Orders')= seller.SellerLedger.balance
      .form-group
        label.control-label.col-sm-2 Last Login
        .col-sm-10
          input.form-control(name='dateSeen', placeholder='Last Login')= new Date(row.dateSeen * 1000).toDateString()


