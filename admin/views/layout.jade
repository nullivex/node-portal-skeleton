include alerts
include mixins
include table
doctype html
html
  head
    block css
      link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/html5-boilerplate-4.3.0/css/normalize.css')
      link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/html5-boilerplate-4.3.0/css/main.css')
      link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/bootstrap-3.2.0/dist/css/bootstrap.min.css')
      link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/pickadate-3.5.2/lib/compressed/themes/default.css')
      link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/pickadate-3.5.2/lib/compressed/themes/default.date.css')
      link(rel='stylesheet', type='text/css', href='//bowercdn.net/c/pickadate-3.5.2/lib/compressed/themes/default.time.css')
      link(rel='stylesheet', type='text/css', href='/css/layout.css')
    title SaleLeap Admin
  body
    if user
      //navbar
      .navbar.navbar-fixed-top.navbar-inverse(role='navigation')
        .container
          a.navbar-brand(href='/') SaleLeap
          ul.nav.navbar-nav
            li
              a(href='/item/list') Items
            li
              a(href='/order/list') Orders
            li
              a(href='/dispute/list') Disputes
            li
              a(href='/blog/list') Blog
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown') Maintenance
                b.caret
              ul.dropdown-menu
                li
                  a(href='/siteMaintenance/list') Sitewide
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown') Manage
                b.caret
              ul.dropdown-menu
                li
                  a(href='/seller/list') Seller
                li
                  a(href='/buyer/list') Buyer
                li
                  a(href='/staff/list') Staff
                li
                  a(href='/page/list') Pages
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(data-toggle='dropdown') #{user.email}
                b.caret
              ul.dropdown-menu
                li
                  a(href='/logout') Logout
    //main content
    block content
    .text-center
      small(style='font-size: 12px;') &copy; SaleLeap Version #{version}
    //load scripts
    block js
      script(src='//bowercdn.net/c/jquery-1.11.1/dist/jquery.min.js')
      script(src='//bowercdn.net/c/bootstrap-3.2.0/dist/js/bootstrap.min.js')
      script(src='//bowercdn.net/c/pickadate-3.5.2/lib/compressed/picker.js')
      script(src='//bowercdn.net/c/pickadate-3.5.2/lib/compressed/picker.date.js')
      script(src='//bowercdn.net/c/pickadate-3.5.2/lib/compressed/picker.time.js')